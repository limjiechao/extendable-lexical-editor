{
  "extends": "@tsconfig/strictest/tsconfig.json",
  "compilerOptions": {
    "target": "esnext",
    "jsx": "react-jsx",
    "lib": ["esnext", "dom", "dom.iterable", "ESNext.Disposable"],
    "moduleDetection": "force",
    "module": "preserve",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "types": [],
    "typeRoots": ["node_modules/@types", "libdefs/globals"],
    "declaration": true,
    "declarationMap": false,
    "emitDeclarationOnly": true,
    "isolatedDeclarations": true, // uses oxc-transform for very fast DTS generation:contentReference[oaicite:0]{index=0}
    "strict": true,
    "verbatimModuleSyntax": true
  },
  "include": ["src"],
  "exclude": [
    "./libdefs/*.cjs",
    "**/build/**",
    "**/dist/**",
    "**/npm/**",
    "**/node_modules/**"
  ]
}
